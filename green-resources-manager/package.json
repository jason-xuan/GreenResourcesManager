{
  "name": "green-resources-manager",
  "version": "0.6.5",
  "description": "一款全能、免费的文件管理器，可以管理你的游戏、漫画、视频、音频、小说、网站等资源。",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-build": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "keywords": [
    "vue",
    "electron",
    "desktop",
    "app"
  ],
  "author": "YanChenXiang",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.8.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "sass": "^1.97.1",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "epubjs": "^0.3.93",
    "pdfjs-dist": "^5.4.449",
    "vue": "^3.3.8"
  },
  "build": {
    "appId": "com.example.green-resources-manager",
    "productName": "GreenResourcesManager",
    "directories": {
      "output": "dist-electron/v${version}",
      "buildResources": "build"
    },
    "artifactName": "${productName} ${version}.${ext}",
    "files": [
      "dist/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/js/**/*",
      "public/butter-logo.svg",
      "public/butter-icon.ico",
      "public/butter-icon.png",
      "public/hide-icon.png",
      "public/unlock.mp3",
      "public/camera.mp3",
      "public/achievement.mp3",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/7zip-bin/**/*"
    ],
    "extraFiles": [
      {
        "from": "disguise",
        "to": "disguise"
      },
      {
        "from": "src/third-party",
        "to": "third-party"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "klsdf",
      "repo": "GreenResourcesManager"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}_Setup_${version}.${ext}",
      "useZip": true,
      "warningsAsErrors": false
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/butter-logo.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/butter-icon.ico"
    },
    "portable": {
      "artifactName": "${productName}_Portable_${version}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/butter-logo.png"
    }
  }
}
